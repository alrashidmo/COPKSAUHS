{
  "name": "appe-student-portal",
  "version": "1.0.0",
  "private": true,
  "description": "APPE Student Portal Monorepo - Student App + Backend API",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @appe/db generate",
    "db:push": "pnpm --filter @appe/db push",
    "db:migrate": "pnpm --filter @appe/db migrate",
    "db:seed": "pnpm --filter @appe/db seed",
    "db:studio": "pnpm --filter @appe/db studio"
  },
  "devDependencies": {
    "turbo": "^1.11.2",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
